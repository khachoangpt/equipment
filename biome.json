{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./src/client/**/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"noVoid": "error",
				"useSimplifiedLogicExpression": "error",
				"noBannedTypes": "off",
				"noStaticOnlyClass": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"suspicious": {
				"noConsoleLog": "error",
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUndeclaredVariables": "error",
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"style": {
				"useImportType": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"indentWidth": 2,
			"enabled": true,
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always"
		}
	}
}
